<div class="columns is-multiline is-centered post">
  <div class="column is-3"></div>
  <div class="column is-6">
    <nav class="navbar">
      <div class="navbar-item">
        <%= link_to "Back to posts", posts_path%>
      </div>
      <div class="navbar-item">
        <span class="is-right blogcrumb">
          <%= link_to 'Edit post', edit_post_path(@post) %>
          <%= link_to 'Delete post', @post, data: { turbo_method: :delete,
                            turbo_confirm: "Are you sure you want to delete this post" } %>
        </span>
      </div>
    </nav>

    <div>
      <p>
        <%= @post.body %>
      </p>
      <%= render partial: 'comments/comments', locals: {commentable: @post} %>
      <%= render partial: 'comments/form', locals: {commentable: @post} %>
    </div>
  </div>
</div>
